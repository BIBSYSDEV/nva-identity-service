<?xml version="1.0" encoding="UTF-8"?>

<Configuration packages="com.amazonaws.services.lambda.runtime.log4j2" strict="true">

  <Appenders>
    <Appender name="Lambda" type="Lambda">
      <PatternLayout>
        <pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} %X{AWSRequestId} %-5p - %m%n</pattern>
      </PatternLayout>
    </Appender>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="Lambda"/>
    </Root>
    <Logger name="no.unit.nva" additivity="false" level="debug">
      <AppenderRef ref="Lambda"/>
    </Logger>
  </Loggers>

</Configuration>